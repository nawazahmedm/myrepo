{
  "port": 6571,
  "protocol": "http",
  "name": "LCS",
  "defaultResponse": {
    "statusCode": 400,
    "body": "Bad Request !! Check URL or Payload !!",
    "headers": {
      "Content-Type": "application/json"
    }
  },
  "stubs": [
    {
      "responses": [
        {
          "is": {
            "statusCode": 200,
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "NOTE": "This part will be dynamically decorated !!"
            }
          },
          "behaviors": [
            {
              "decorate": "function(config, response) { " +
                "const safeStringify = (obj) => { " +
                  "const seen = new WeakSet(); " +
                  "return JSON.stringify(obj, (key, value) => { " +
                    "if (typeof value === 'object' && value !== null) { " +
                      "if (seen.has(value)) return; " +
                      "seen.add(value); " +
                    "} " +
                    "return value; " +
                  "}); " +
                "}; " +
                "response.body = safeStringify(require('./wireresponselogic.js')); " +
              "}"
            },
            {
              "wait": "function() { return response.imposterState.customWait || 10; }"
            }
          ]
        }
      ],
      "predicates": [
        {
          "equals": {
            "path": "/LCS",
            "method": "POST"
          }
        }
      ]
    }
  ]
}
