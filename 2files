// wireresponselogic.js

// Define your response logic here
const responseLogic = {
    message: "This is the dynamic response!",
    timestamp: new Date().toISOString(),
    additionalInfo: "Feel free to add more details here."
};

// Export the response logic
module.exports = responseLogic;


---
{
  "port": 6571,
  "protocol": "http",
  "name": "LCS",
  "defaultResponse": {
    "statusCode": 400,
    "body": "Bad Request !! Check URL or Payload !!",
    "headers": { "content-type": "application/json" }
  },
  "stubs": [
    {
      "responses": [
        {
          "is": {
            "statusCode": 200,
            "headers": {
              "Content-Type": "application/json"
            },
            "body": {
              "NOTE": "This part will be dynamically decorated !!"
            }
          },
          "behaviors": [
            {
              "decorate": "function(config, response) { 
                const path = require('path'); 
                try {
                    const logic = require(path.resolve(__dirname, 'wireresponselogic.js'));
                    console.log('Logic loaded:', logic);
                    response.body = JSON.stringify(logic);
                } catch (error) {
                    console.error('Error loading logic:', error);
                    response.body = JSON.stringify({ error: 'Internal Server Error' });
                } 
              }"
            },
            {
              "wait": "function(request, response) { 
                return (response && response.imposterState && response.imposterState.customWait) ? response.imposterState.customWait : 10; 
              }"
            }
          ]
        }
      ],
      "predicates": [
        {
          "equals": {
            "path": "/LCS",
            "method": "POST"
          }
        }
      ]
    }
  ]
}


